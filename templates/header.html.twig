 <!-- Header -->
    <div class="container">
        <div class="d-flex row flex-wrap align-items-center justify-content-center justify-content-md-between py-3 border-bottom">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <img class="bi me-2" width="40" height="40" src="{{ asset("build/images/logo.svg") }}"/>
                <span class="fs-4" style="white-space: nowrap;">PM-bloGG</span>
            </a>

            {% if app.user %}
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <h5 class="text-center my-0 me-2" style="white-space: nowrap;">Здравствуйте, {{ app.user.name }}</h5>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="/admin" type="button" class="btn btn-primary me-2" style="white-space: nowrap;">Админ. Панель</a>
                    {% endif %}
                    <a href="/logout" type="button" class="btn btn-primary">Выйти</a>
                </div>
            {% else %}
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a href="/login" type="button" class="btn btn-primary me-2">Авторизация</a>
                    <a href="/register" type="button" class="btn btn-primary">Зарегистрироваться</a>
                </div>
            {% endif %}


        </div>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                {% for category in categories_list.findAll() %}
                <a class="p-2 link-secondary" href="category{{category.getUrl()}}">{{ category.getName() }}</a>
                {% endfor %}
            </nav>
        </div>
    </div>