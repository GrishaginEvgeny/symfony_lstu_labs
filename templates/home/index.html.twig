{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block body %}
<style>
</style>
</style>
    <div class="container">
        {{ include('header.html.twig') }}
        <!— Order —>
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <p class="text-center">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Найти блог" aria-label="Find blog" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">Найти</button>
                </div>
                </p>
            </div>
        </div>
        <!— body —>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {%  for post in posts %}
                <div class="col-md-6">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-success">{{ post.getUser().getBlogCategory() }}</strong>
                            <h3 class="mb-0">{{ post.getTitle()  }}</h3>
                            <small class="text-muted">{{ post.getAddDate()|date("h:m:s d/m/y") }}</small>
                            <p class="mb-auto">{{ post.getText() }}</p>
                            <div class="d-flex justify-content-between">
                                <a href="/blog/{{ post.getUser().getBlogName() }}">Перейти к блогу</a>
                                <a href="/post/{{ post.getId() }}">Перейти к посту</a>
                            </div>
                        </div>
                        <div class="col-auto d-none d-lg-block">
                            <a href="/post/{{ post.getId() }}">
                                <img class="bi" width="200" height="250" src="{{ asset('uploads/posts/'~post.getPictures()[0]) }}"/>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!— Footer —>
        {{ include('footer.html.twig') }}
    </div>
{% endblock %}
