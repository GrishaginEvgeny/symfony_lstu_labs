{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}

    <!-- Order -->
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="display-5 fw-bold text-center">
                    Регистрация
                </h1>
            </div>
        </div>
    </div>

    <!-- Main layout -->
    <div class="container">
        <div class="col-8 mx-auto">
            {{ form_start(registrationForm) }}
            <!-- Name -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.name) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.name) }}
                </div>
                {{ form_widget(registrationForm.name, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'nameHelp',
                }}) }}
                <small id="nameHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.name) }}</small>
            </div>
            <!-- Email -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.email) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.email) }}
                </div>
                {{ form_widget(registrationForm.email, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'emailHelp',
                }}) }}
                <small id="emailHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.email) }}</small>
            </div>
            <!-- Password -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.password) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.password) }}
                </div>
                {{ form_widget(registrationForm.password, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'passHelp',
                }}) }}
                <small id="passHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.password) }}</small>
            </div>
            <!-- User-avatar -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.user_avatar) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.user_avatar) }}
                </div>
                {{ form_widget(registrationForm.user_avatar, {'attr':{
                    'class': 'form-control-file',
                    'aria-describedby': 'usrImgHelp',
                }}) }}
                <small id="usrImgHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.user_avatar) }}</small>
            </div>
            <!-- Blog_name -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.blog_name) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.blog_name) }}
                </div>
                {{ form_widget(registrationForm.blog_name, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'blognameHelp',
                }}) }}
                <small id="blognameHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.blog_name) }}</small>
            </div>
            <!-- Blog_caption -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.blog_caption) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.blog_caption) }}
                </div>
                {{ form_widget(registrationForm.blog_caption, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'blogcapHelp',
                }}) }}
                <small id="blogcapHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.blog_caption) }}</small>
            </div>
            <!-- Blog_category -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.category) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.category) }}
                </div>
                {{ form_widget(registrationForm.category, {'attr':{
                    'class': 'form-control',
                    'aria-describedby': 'blogcatHelp',
                }}) }}
                <small id="blogcatHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.category) }}</small>
            </div>
            <!-- Blog_picture -->
            <div class="form-group mb-2">
                {{ form_label(registrationForm.blog_picture) }}
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.blog_picture) }}
                </div>
                {{ form_widget(registrationForm.blog_picture, {'attr':{
                    'class': 'form-control-file',
                    'aria-describedby': 'blogImgnHelp',
                }}) }}
                <small id="blogImgHelp" class="form-text text-muted mb-0">{{ form_help(registrationForm.blog_picture) }}</small>
            </div>

            <div class="form-check mb-2">
                {{ form_widget(registrationForm.agree_checkbox, {'attr':{
                    'class': 'form-check-input',
                    'type' : 'checkbox',
                }}) }}
                {{ form_label(registrationForm.agree_checkbox) }}
            </div>
            <div class="text-danger m-0">
                {{ form_errors(registrationForm.agree_checkbox) }}
            </div>


            <div class="button_container text-center">
                <button type="submit" class="btn btn-primary ">Зарегистрироваться</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

    <!-- Footer -->
    {{ include('footer.html.twig') }}
{% endblock %}
